<h3>商品詳細</h3>

<div>
  <%= image_tag @item.get_image(300,300) %>
</div>
<div>
  <table>
    <tbody>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格<br>(税抜価格)</td>
        <td><%= ((@item.price*1.1).floor).to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <% if @item.sale_status %>
          <td>販売中</td>
        <% else %>
          <td>販売停止中</td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= link_to "編集する", edit_admin_item_path(@item.id) %>
</div>
