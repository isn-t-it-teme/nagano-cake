<div class="container">
  <div class="row">
    <div class="col-md-3 my-3 text-center bg-light text-dark">
      <h3>商品詳細</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.get_image(300,300) %>
    </div>

    <div class="col-md-8">
      <table>
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td><%= ((@item.price*1.1).floor).to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <% if @item.sale_status %>
              <td ><span class="green">販売中</span></td>
            <% else %>
              <td><span class="green">販売停止中</span></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-12 text-center">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
  </div>
</div>

<style>
.green{color: mediumseagreen;
}

.red{color: red;
}
</style>
