<h3>商品一覧</h3>

<%= link_to "＋", new_admin_item_path %>

<div>
  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |f| %>
      <tr>
        <td><%= f.id %></td>
        <td>
          <%= link_to admin_item_path(f.id) do %>
            <%= f.name %>
          <% end %>
        </td>
        <td><%= f.price.to_s(:delimited) %></td>
        <td><%= f.genre.name %></td>
        <% if f.sale_status %>
          <td>販売中</td>
        <% else %>
          <td>販売停止中</td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= paginate @items %>
</div>