<div class="container">
  <div class="row">
    <div class="col-md-3 my-3 text-center bg-light text-dark">
      <h3>商品一覧</h3>
    </div>

    <div class="col-md-9 my-3 text-right">
      <%= link_to "＋", new_admin_item_path, class: "btn btn-outline-secondary rounded-circle" %>
    </div>
  </div>

<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr class="bg-light">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |f| %>
        <tr>
          <td><%= f.id %></td>
          <td >
            <%= link_to admin_item_path(f.id), style: "color: #000;" do %>
              <%= f.name %>
            <% end %>
          </td>
          <td><%= f.price.to_s(:delimited) %></td>
          <td><%= f.genre.name %></td>
          <% if f.sale_status %>
            <td><span class="green">販売中</span></td>
          <% else %>
            <td><span class="red">販売停止中</span></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div>
  <%= paginate @items %>
</div>

<style>
.green{color: mediumseagreen;
}

.red{color: red;
}
</style>
