<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div>ジャンル名</div>
  <%= f.text_field :name %>

  <%= f.submit '新規登録' %>

<% end %>


<div>
  <table>
    <thed>
      <tr>
        <th>ジャンル</th>
      </tr>
    </thed>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


