<div class="container">
  <div class="row">
    <div class="col-md-3 my-3 text-center bg-light text-dark">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>

  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row mb-5">
      <div class="col-md-5">
        <table>
          <tbody>
            <tr>
              <td>ジャンル名</td>
              <td style="width: 20px;"></td>
              <td><%= f.text_field :name %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-md-7">
        <%= f.submit '新規登録', class: "btn btn-info" %>
      </div>
    </div>
  <% end %>


<div class="row">
  <div class="col-md-5">
    <table class="table">
      <thed>
        <tr class="bg-light">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thed>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>

