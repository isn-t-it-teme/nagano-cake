<div class="container">
  <div class="row">
    <div class="col-md-3 my-3 text-center bg-light text-dark">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-md-4">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <table>
        <tbody>
          <tr>
            <td>ジャンル名</td>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-8">
      <%= f.submit '新規登録', class: "btn btn-info" %>
    </div>
      <% end %>
  </div>


<div class="row">
  <div class="col-md-5">
    <table class="table">
      <thed>
        <tr class="bg-light">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thed>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>

