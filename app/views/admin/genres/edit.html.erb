<div class="container">
  <div class="row">
    <div class="col-md-3 my-3 text-center bg-light text-dark">
      <h3>ジャンル編集</h3>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-4">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
        <table>
          <tbody>
            <tr>
              <td>ジャンル名</td>
              <td>
                <%= f.text_field :name, class: "form-control" %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>

    <div class="col-md-8">
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
      <% end %>
  </div>
</div>