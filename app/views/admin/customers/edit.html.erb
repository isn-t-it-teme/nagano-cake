<div class="container">
  <div class="row">
    <div class="col-md-5 my-3 text-center bg-light text-dark">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
    </div>
  </div>

  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
      <div class="col-md-12 mb-5">
        <table>
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan="2"><%= f.text_area :address, size: "50x1" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_deleted, false %>
                <%= f.label :is_deleted, '有効' %>
              </td>
              <td>
                <%= f.radio_button :is_deleted, true %>
                <%= f.label :is_deleted, '退会' %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>

    <div class="col-md-12 text-center">
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
      <% end %>
  </div>
</div>