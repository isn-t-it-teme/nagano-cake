<div class="container">
  <div class="row">
    <div class="col-md-3 my-3 text-center bg-light text-dark">
      <h3>会員一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id), style: "color: #000;" do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
              </td>
            <td><%= customer.email %></td>
            <% if customer.is_deleted %>
              <td class="red">退会</td>
            <% else %>
              <td class="green">有効</td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-12 text-center">
      <%= paginate @customers %>
    </div>
  </div>
</div>

<style>
  .red{color: red;
  }

  .green{color: mediumseagreen;
</style>