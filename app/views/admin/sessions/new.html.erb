<div class="container">
  <div class="row">
    <div class="col-md-3 mb-4 text-center bg-light text-dark">
      <h3>管理者ログイン</h3>
    </div>

        <div class="col-md-10 offset-2">
          <%= form_with model: @admin, url: admin_session_path do |f| %>
            <table>
              <tbody>
                <tr>
                  <td><%= f.label :email, "メールアドレス" %></td>
                  <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
                </tr>
                <tr>
                  <td><%= f.label :password,"パスワード" %></td>
                  <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
                </tr>
              </tbody>
            </table>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="col-md-12 text-center">
              <div class="actions">
                <%= f.submit "ログイン", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>

          <%= render "admin/shared/links" %>
      </div>
  </div>
</div>