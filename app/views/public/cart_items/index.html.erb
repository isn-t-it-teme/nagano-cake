<div class="container">
  <div class="row my-3">
    <div class="col-md-4 text-center bg-light text-dark">
      <h3>ショッピングカート</h3>
    </div>
    <div class="col-md-8 text-right">
      <%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete, "data=confirm" => "本当に削除しますか？", class: "btn btn-info" %>
    </div>
  </div>

  <div>
    <table class="table table-bordered col col-md-12">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税抜)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_image(50,50) %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
              <%= f.select :quantity, *[1..10] %>
              <%= f.submit '変更', class: "btn btn-success" %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          <% @total += cart_item.subtotal %>
          <td>
          <%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row mb-3">
    <div class="col-md-8">
      <%= link_to '買い物を続ける', root_path, class: "btn btn-primary" %>
    </div>
    <table class="table table-bordered col-md-4 text-rigth">
      <tbody>
        <tr>
          <td class="bg-light">合計金額</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-md-12 mb-5 text-center">
    <% if @cart_items.any? %>
      <%= link_to '情報入力に進む', new_order_path, class: "btn btn-success" %>
    <% end %>
  </div>
</div>