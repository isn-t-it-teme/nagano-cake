<h1>ショッピングカート</h1>
<div>
  <%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete, "data=confirm" => "本当に削除しますか？" %>
</div>

<div>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税抜)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image(50,50) %>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
        <td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
            <%= f.select :quantity, *[1..10] %>
            <%= f.submit '変更' %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal.to_s(:delimited) %></td>
        <% @total += cart_item.subtotal %>
        <td>
        <%= link_to '削除する', cart_item_path(cart_item.id), method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <table>
    <tbody>
      <tr>
        <td>合計金額</td>
        <td><%= @total.to_s(:delimited) %></td>
      </tr>
    </tbody>
  </table>
</div>