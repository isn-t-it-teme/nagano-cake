<div class="container">
  <div class="row mb-4">
    <div class="col-md-3  text-center bg-light text-dark">
      <h3>会員情報編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @customer, url: customers_my_page_path do |f| %>
        <div class="field">
          <%= f.label :名前 %>
          <%= f.label :last_name, "(姓)" %>
          <%= f.text_field :last_name %>
          <%= f.label :first_name, "(名)" %>
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :フリガナ %>
          <%= f.label :last_name_kana, "(セイ)" %>
          <%= f.text_field :last_name_kana %>
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana %>
        </div>

        <div class="field">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code %>
        </div>

        <div class="field">
          <%= f.label :address, "住所" %>
          <%= f.text_area :address %>
        </div>

        <div class="field">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
          <%= f.text_field :telephone_number %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>


      <div class="col-md-4 offset-2">
        <div class="actions">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        </div>
      </div>

      <div class="col-md-5 offset-1">
        <div class="actions">
          <%= link_to "退会する", customers_confilm_path, class: "btn btn-danger" %>
        </div>
      </div>

      <% end %>
  </div>
</div>