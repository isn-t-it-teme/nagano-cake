<h3>注文履歴一覧</h3>
<div>
  <table>
    <tbody>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </tbody>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%y/%m/%d') %></td>
        <td>
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td>
          <% order.order_products.each do |order_product| %>
            <%= order_product.item.name %><br>
          <% end %>
        </td>
        <td><%= order.total_price.to_s(:delimited) %>円</td>
        <!--orderモデルに保存されているステータスから注文ステータスを取得する -->
        <td><%= order.status_i18n %></td>
        <td><%= link_to '表示する',order_path(order.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= paginate @orders %>
</div>