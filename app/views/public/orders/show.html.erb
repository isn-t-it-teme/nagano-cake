<h3>注文履歴詳細</h3>

<div>
  <strong>注文情報</strong>
  <table>
    <tbody>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime('%y/%m/%d') %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td>
          〒<%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_i18n %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td><%= @order.status_i18n %></td>
      </tr>
    </tbody>
  </table>

</div>

<div>
  <strong>注文内容</strong>
    <table>
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <%  @order.order_products.each do |order_product| %>
        <tr>
          <td><%= order_product.item.name %></td>
          <td><%= order_product.tax_price.to_s(:delimited) %></td>
          <td><%= order_product.product_quantity %></td>
          <td><%= order_product.subtotal.to_s(:delimited) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>

<div>
  <strong>請求情報</strong>
    <table>
      <tbody>
        <tr>
          <td>商品合計</td>
          <td><%= (@order.total_price - @order.postage).to_s(:delimited) %></td>
        </tr>
        <tr>
          <td>配送料</td>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <td>ご請求金額</td>
          <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>

</div>