<div class="container">
  <div class="row mb-3">
    <div class="col-md-3 text-center bg-light text-dark">
      <h3>注文情報入力</h3>
    </div>
  </div>


    <%= form_with model: @order, url: orders_confirm_path do |f| %>
    <% if @order.errors.any? %>
      <div id="error_explanation">
        <h3><%= @order.errors.count %> 個のエラーが発生しました。</h3>
        <ul>
        <% @order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col col-md-1 float-start">
        <p><strong>支払方法</strong></p>
      </div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
      <div class="col col-md-11">
        <div>
          <%= f.radio_button :payment, Order.payments.key(0) %>
          <%= f.label :payment, Order.payments_i18n[:credit_card] %>
        </div>
        <div>
          <%= f.radio_button :payment, Order.payments.key(1) %>
          <%= f.label :payment, Order.payments_i18n[:transfer]%>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col col-md-1">
        <p><strong>お届け先</strong></p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col col-md-11 mb-3">
        <%= f.radio_button :select_shipping_address,0 %>
        <%= f.label :select_shipping_address, "ご自身の住所" %><br>
        〒<%= @current_customer.postal_code %> <%= @current_customer.address %><br>
        <%= @current_customer.last_name %> <%= @current_customer.first_name %>
      </div>

      <div class="col-md-1"></div>
      <div class="col col-md-11 mb-3">
        <%= f.radio_button :select_shipping_address,1 %>
        <%= f.label :select_shipping_address, "登録住所から選択" %><br>
        <%= f.select :shipping_address_id, options_from_collection_for_select(@current_customer.shipping_addresses, :id, :address_display) %>
      </div>

      <div class="col-md-1"></div>
      <div class="col col-md-11 mb-3">
        <%= f.radio_button :select_shipping_address,2 %>
        <%= f.label :select_shipping_address, "新しいお届け先" %><br>

        <table>
          <tbody>
            <tr>
              <td><label class="form-label" for="inputpostal_cod">郵便番号(ハイフンなし)</label></td>
              <td><%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placheholder:"Postal_code", class:"form-control" %></td>
            </tr>
            <tr>
              <td><label class="form-label" for="inputaddress">住所</label></td>
              <td><%= f.text_area :address, autofocus: true, id:"inputAddress", placheholder:"Address", class:"form-control" %></td>
            </tr>
            <tr>
              <td><label class="form-label" for="inputname">宛名</label></td>
              <td><%= f.text_field :name, autofocus: true, id:"inputname", placheholder:"Name", class:"form-control" %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-md-12 text-center mb-3">
        <%= f.submit '確認画面へ進む', class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
</div>