<div class="container">
  <div class="row mb-3">
    <div class="col-md-3 text-center bg-light text-dark">
      <h3>配送先編集</h3>
    </div>
  </div>
<%= form_with model: @shipping_address, url: shipping_address_path do |f| %>
<div>
  <table>
    <tbody>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_area :address, size: "45x1" %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit '変更内容を保存', class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
</div>
<% end %>