<h3>配送先登録/一覧</h3>
<%= form_with model: @shipping_address, url: shipping_address_index_path do |f| %>
<div>
  <table>
    <tbody>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_area :address %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit '新規登録' %></td>
      </tr>
    </tbody>
  </table>
</div>
<% end %>

<div>
  <table>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @shipping_addresses.each do |shipping_address| %>
      <tr>
        <td><%= shipping_address.postal_code %></td>
        <td><%= shipping_address.address %></td>
        <td><%= shipping_address.name %></td>
        <td>
          <%= link_to "編集する", edit_shipping_address_path(shipping_address.id) %>
          <%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
