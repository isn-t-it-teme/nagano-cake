<%= render 'genres_sidebar', genres: @genres %>

<div>
  <%= image_tag @item.get_image(250,250) %>

  <h3>
    <%= @item.name %>
  </h3>

  <p><%= @item.introduction %></p>
  <p><strong>¥<%= ((@item.price*1.1).floor).to_s(:delimited) %></strong>(税込)</p>
</div>

<div>
<%= form_with model: @cart_item, url: cart_items_path do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.select :quantity, *[1..3] %>
  <%= f.submit 'カートに入れる' %>
<% end %>
</div>