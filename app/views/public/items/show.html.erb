<div class="container">
  <div class="row">
    <div class="col-md-3 mt-4">
      <%= render 'genres_sidebar', genres: @genres %>
    </div>

    <div class="col-md-3 mt-4">
      <%= image_tag @item.get_image(300,300) %>
    </div>

    <div class="col-md-5 offset-1 mt-4">
      <h3 class="mb-3"><%= @item.name %></h3>
      <p class="mb-5"><%= @item.introduction %></p>
      <p class="mb-4"><strong>¥<%= ((@item.price*1.1).floor).to_s(:delimited) %></strong>(税込)</p>


      <%= form_with model: @cart_item, url: cart_items_path do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.hidden_field :customer_id, :value => @customer %>
        <%= f.select :quantity, *[1..3], include_blank: '個数選択' %>
        <%= f.submit 'カートに入れる', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>