<div class="container">
  <div class="row mb-3">
    <div class="col-md-3 text-center bg-light text-dark">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with model:  @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :名前 %>
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name %>
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name %>
          </div>



          <div class="field">
            <%= f.label :名前 %>
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name %>
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name %>
          </div>

          <div class="field">
            <%= f.label :フリガナ %>
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana %>
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana %>
          </div>


          <div class="field">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
            <%= f.text_field :postal_code %>
          </div>

          <div class="field">
            <%= f.label :address, "住所" %>
            <%= f.text_area :address %>
          </div>

          <div class="field">
            <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
            <%= f.text_field :telephone_number %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %>
          　<% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード (確認用)"  %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

        <div class="col-md-12 mb-3 text-center">
          <div class="actions">
            <%= f.submit " 新規登録 ", class: "btn btn-success" %>
          </div>
        </div>


      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 mb-3 bg-light text-center">
      <h5>既に登録お済の方</h5>
    </div>
    <div class="col-md-11 offset-md-1">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
  </div>
</div>