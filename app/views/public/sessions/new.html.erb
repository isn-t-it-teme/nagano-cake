<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h4>ログイン</h4>

      <h5>会員の方はこちらからログイン</h5>

      <%= form_with model: @customer, url: customer_session_path do |f| %>
          <div class="form-group row">
            <div class="field">
              <%= f.label :メールアドレス %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="field">
              <%= f.label :パスワード %>
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>


            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>


            <div class="actions">
              <%= f.submit "ログイン" %>
            </div>
            <% end %>


      <%= render "public/shared/links" %>
      </div>
    </div>
  </div>