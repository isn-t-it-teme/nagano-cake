<div class="container">
  <div class="row mb-3">
    <div class=" col col-md-2 bg-light text-center">
      <h4>ログイン</h4>
    </div>
  </div>

    <div class="row mb-3">
      <div class="col col-md-4 bg-light text-center">
        <h5>会員の方はこちらからログイン</h5>
      </div>
    </div>

      <%= form_with model: @customer, url: customer_session_path do |f| %>
          <div class="form-group row">
            <div class="field">
              <%= f.label :メールアドレス %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="field">
              <%= f.label :パスワード %>
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>


            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>


            <div class="actions">
              <%= f.submit "ログイン", class:"btn btn-primary" %>
            </div>
            <% end %>


      <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>